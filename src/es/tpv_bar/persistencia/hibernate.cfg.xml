<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1/mydb</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <property name="current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="es/tpv_bar/persistencia/pojos/Categoria.hbm.xml"/>
    <mapping resource="es/tpv_bar/persistencia/pojos/Cabezera.hbm.xml"/>
    <mapping resource="es/tpv_bar/persistencia/pojos/Camarero.hbm.xml"/>
    <mapping resource="es/tpv_bar/persistencia/pojos/Productos.hbm.xml"/>
    <mapping resource="es/tpv_bar/persistencia/pojos/Ubicacion.hbm.xml"/>
    <mapping resource="es/tpv_bar/persistencia/pojos/Linea.hbm.xml"/>
    
    <mapping resource="es/tpv_bar/persistencia/pojos/Configuracion.hbm.xml"/>
    <mapping resource="es/tpv_bar/persistencia/pojos/Caja.hbm.xml"/>
  
    <mapping resource="es/tpv_bar/persistencia/pojos/Bloqueubicacion.hbm.xml"/>

    <mapping resource="es/tpv_bar/persistencia/pojos/Arqueos.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
